<p id="notice"><%= notice %></p>

<section class="card">
  <div class="card-image">
    <figure class="image is-2by1">
      <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
    </figure>
  </div>
<div class="level card-content">
<div class="title is-1 card-header-title"><%= @player.full_name %> | <%= @player.position %></div>
  <div class="level-item has-text-centered pt-0">
    <div>
      <p class="heading">Jersey Number</p>
      <p class="title"><%= @player.jersey_number %></p>
    </div>
  </div>
  <div class="level-item has-text-centered">
    <div>
      <p class="heading">Position</p>
      <p class="title"><%= @player.position_abbreviation %></p>
    </div>
  </div>
  <div class="level-item has-text-centered">
    <div>
      <p class="heading">Current Team</p>
      <p class="title"><%= @team.abbreviation %></p>
    </div>
  </div>
  <div class="level-item has-text-centered">
    <div>
      <p class="heading">Points</p>
      <p class="title">##</p>
    </div>
  </div>
</div>
</section>
<p class="mt-2 mb-2">
  <strong><%= link_to "Back to " + @team.abbreviation, @team %></strong>
</p>