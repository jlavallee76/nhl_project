<p id="notice"><%= notice %></p>

<h1 class="title is-1 mt-2">Players</h1>

<table class="table">
  <thead>
    <tr>
      <th>Full name</th>
      <th>Position</th>
      <th>Position abbreviation</th>
      <th>Jersey number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= link_to player.full_name, player %></td>
        <td><%= player.position %></td>
        <td><%= player.position_abbreviation %></td>
        <td><%= player.jersey_number %></td>
        <td><%= link_to 'Details', player %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Player', new_player_path %>
