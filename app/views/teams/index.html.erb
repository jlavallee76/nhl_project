<p id="notice"><%= notice %></p>

<h1 class="title is-1 mt-2">Teams</h1>

<table class="table is-hoverable is-fullwidth is-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Venue</th>
      <th>Abbreviation</th>
      <th>First year</th>
      <th>Conference</th>
      <th>Division</th>
      <th>Web site</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= link_to team.name, team %></td>
        <td><%= team.venue %></td>
        <td><%= team.abbreviation %></td>
        <td><%= team.first_year %></td>
        <td><%= team.conference %></td>
        <td><%= team.division %></td>
        <td><%= link_to team.web_site, team.web_site %></td>
        <td><%= link_to 'See Roster', team %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
